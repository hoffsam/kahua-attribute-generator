{
  "name": "kahua-attribute-generator",
  "displayName": "Kahua Attribute Generator",
  "description": "Generate Kahua XML attribute, label, DataTag, Field and FieldDef fragments from selected lines.",
  "version": "1.1.0",
  "publisher": "Sammy",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0"
  },
  "activationEvents": [
    "onCommand:kahua.createExtensionAttributes",
    "onCommand:kahua.createSupplementAttributes"
  ],
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "kahua.createExtensionAttributes",
          "when": "editorTextFocus && editorHasSelection"
        },
        {
          "command": "kahua.createSupplementAttributes",
          "when": "editorTextFocus && editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "kahua.createExtensionAttributes",
          "when": "kahua.showInContextMenu && editorTextFocus && editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "kahua.createSupplementAttributes",
          "when": "kahua.showInContextMenu && editorTextFocus && editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "kahua.createExtensionAttributes",
        "title": "Kahua: Create Attributes From Selection For Extension"
      },
      {
        "command": "kahua.createSupplementAttributes",
        "title": "KAhua: Create Attributes From Selection For Supplement"
      }
    ],
    "keybindings": [
      {
        "command": "kahua.createExtensionAttributes",
        "key": "ctrl+alt+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "kahua.createSupplementAttributes",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Kahua Attribute Generator",
      "properties": {
        "kahua.showInContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show Kahua generator commands in the editor right-click context menu."
        },
        "kahua.fragments": {
          "type": "object",
          "default": {
            "attribute": "<Attribute Name=\"{name}\" Label=\"[{prefix}_{name}Label]\" Description=\"[{prefix}_{name}Description]\" DataType=\"{type}\" IsConfigurable=\"true\" />",
            "label": "<Label Key=\"{prefix}_{name}Label\">{label}</Label>",
            "descriptionLabel": "<Label Key=\"{prefix}_{name}Description\">{label}</Label>",
            "dataTag": "<DataTag Name=\"{prefix}_{name}\" Key=\"{prefix}_{name}\" Label=\"[{prefix}_{name}Label]\" CultureLabelKey=\"{prefix}_{name}Label\" />",
            "field": "<Field Attribute=\"{name}\" />",
            "fieldDef": "<FieldDef Name=\"{name}\" Path=\"{name}\" DataTag=\"{prefix}_{name}\" Edit.Path=\"{name}\" />",
            "dataStoreColumn": "<Column AttributeName=\"{name}\" />",
            "logField": "<Field FieldDef=\"{name}\" />"
          },
          "description": "Fragment templates for generating Kahua XML. Add, remove, or customize output fragments."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://example.com/your/kahua-attribute-generator.git"
  },
  "license": "MIT"
}
